<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_show"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/show"
        app:layout_constraintBottom_toTopOf="@+id/btn_plugin"
        app:layout_constraintTop_toBottomOf="@+id/et_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_plugin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/load_plugin"
        app:layout_constraintBottom_toTopOf="@+id/btn_hotfix"
        app:layout_constraintTop_toBottomOf="@+id/btn_show" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_hotfix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/hotfix"
        app:layout_constraintBottom_toTopOf="@+id/btn_remove_hotfix"
        app:layout_constraintTop_toBottomOf="@+id/btn_plugin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_remove_hotfix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/remove_hotfix"
        app:layout_constraintBottom_toTopOf="@+id/btn_kill_app"
        app:layout_constraintTop_toBottomOf="@+id/btn_hotfix" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kill_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/kill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_remove_hotfix" />

</androidx.constraintlayout.widget.ConstraintLayout>